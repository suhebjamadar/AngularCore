{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
            "taskName": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "tscbuild",
            "command": "tsc -p tsconfig.json",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$tsc-watch",
            "isBackground": true
        },
        {
            "taskName": "run",
            "command": "dotnet run",
            "type": "shell",
            "group": "none",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$go"
        },
        {
            "taskName": "copy",
            "command": "gulp copy",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "tscbuild",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$go"
        }
    ]
}